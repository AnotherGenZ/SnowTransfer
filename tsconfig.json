{
	"compilerOptions": {
		"allowSyntheticDefaultImports": false,
		"esModuleInterop": false,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"lib": ["es2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"sourceMap": false,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"target": "ES2019",
		"types": ["node"]
	},
	"include": ["./src"]
}
